<%= form_for @observation, :html => { :class => "form-horizontal observation" } do |f| %>

  <% if @observation.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@observation.errors.count, "error") %> prohibited this observation from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @observation.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Descrição", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control' %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label "Ano", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :year, :class => 'form-control' %>
    </div>
    <%=f.error_span(:year) %>
  </div>
  <div class="form-group">
    <%= f.label "Mês", :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :month, :class => 'form-control' %>
    </div>
    <%=f.error_span(:month) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit "Salvar", :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                observations_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
